# ===========================================
# AdGenius AI - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# The app runs in demo mode if Supabase is not configured

# -------------------------------------------
# Supabase Configuration
# -------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# -------------------------------------------
# OpenAI Configuration
# -------------------------------------------
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# -------------------------------------------
# Stripe Configuration
# -------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Price ID for Pro subscription from: https://dashboard.stripe.com/products
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_your_pro_price_id

# -------------------------------------------
# Application Configuration
# -------------------------------------------
# Your application URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000
